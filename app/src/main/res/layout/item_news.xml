<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_little_margin"
    android:layout_marginRight="@dimen/base_little_margin"
    android:layout_marginTop="@dimen/card_view_dimen"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dimen_0dp"
    card_view:cardElevation="@dimen/card_view_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="@dimen/news_list_image_width"
            android:layout_height="@dimen/news_list_image_height"
            android:layout_marginBottom="@dimen/news_list_image_margin"
            android:layout_marginLeft="@dimen/news_list_image_margin"
            android:layout_marginTop="@dimen/news_list_image_margin"
            android:background="@color/color_primary"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_background"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_toRightOf="@id/iv_background"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="减肥的开始了几十fjkdfklsjk块的了解放路上"
            android:textColor="@color/title_text"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/base_little_margin"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="会计分录社交类方省老地方就岛咖啡技术老大"
            android:textColor="@color/content_text"
            android:textSize="@dimen/content_text_size"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_background"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_margin"
            android:includeFontPadding="false"
            android:text="2016-6-29"
            android:textColor="@color/content_text"
            android:textSize="@dimen/content_text_size"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>